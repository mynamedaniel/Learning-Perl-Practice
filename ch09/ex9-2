#!/usr/bin/perl
##Copyright (C) 2015 by Daniel XU
use warnings;
use diagnostics;
use strict;
use 5.010;

my $in = $ARGV[0];

if (! defined $in) {
	die "No file provided";
}

my $out = $in . ".out";

if (! open INPUT, '<', $in) {
	die "Can\'t open $in: $!";
}

if (! open OUTPUT, '>>', $out) {
	die "Can\'t write to $out: $!";
}

while(<INPUT>) {
	s/Fred/Larry/gi;
	print OUTPUT $_;
}
